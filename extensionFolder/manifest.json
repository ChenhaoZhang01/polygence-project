{
  "manifest_version": 3,
  "name": "Microaggression Identifier",
  "description": "",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "background",
    "scripting",
    "storage",
    "nativeMessaging"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*"],	
      "js": ["scripts/facebook.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.instagram.com/direct/*"],
      "js": ["scripts/instagram.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.messenger.com/*"],
      "js": ["scripts/messenger.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.discord.com/channels/*"],
      "js": ["scripts/discord.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.x.com/home"],
      "js": ["scripts/twitter.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.x.com/home?lang=en"],
      "js": ["scripts/twitter.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://*.facebook.com/*",
    "https://*.instagram.com/*",
    "https://*.messenger.com/*",
    "https://*.discord.com/*",
    "https://*.x.com/*",
    "https://*.xcom.com/*"
  ],
  "action": {
    "default_popup": "hello.html",
    "default_icon": "polygence_logo.png"
  }
}